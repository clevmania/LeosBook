<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvPaymentType"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        tools:text="C"
        android:fontFamily="@font/source_sans_pro_semi_bold"
        android:textSize="24sp"
        android:gravity="center"
        android:background="@drawable/ic_payment_type"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTransactionDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        tools:text="Aug 10"
        android:textStyle="italic"
        android:textColor="@color/colorBlack"
        android:fontFamily="@font/source_sans_pro_semi_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvCustomerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        tools:text="Grudd Peters"
        android:textColor="@color/colorBlack"
        android:fontFamily="@font/source_sans_pro_semi_bold"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/tvPaymentType"
        app:layout_constraintTop_toTopOf="@+id/tvPaymentType" />

    <TextView
        android:id="@+id/tvAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/source_sans_pro_bold"
        tools:text="@string/u20a68_500"
        android:textColor="@color/colorBlack"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/tvCustomerName"
        app:layout_constraintTop_toBottomOf="@+id/tvCustomerName" />

    <TextView
        android:id="@+id/tvReference"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/source_sans_pro_regular"
        tools:text="FLW770151596964029473"
        android:textColor="@color/colorTextPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvAmount"
        app:layout_constraintTop_toBottomOf="@+id/tvAmount" />

    <TextView
        android:id="@+id/tvNetAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/source_sans_pro_semi_bold"
        android:textColor="@color/colorMerchantsIncome"
        tools:text="@string/u20a68_500"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvAmount"
        app:layout_constraintStart_toEndOf="@+id/tvAmount"
        app:layout_constraintTop_toTopOf="@+id/tvAmount" />

    <TextView
        android:id="@+id/tvProcessingFee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textSize="16sp"
        tools:text="@string/u20a68_500"
        android:textColor="@color/colorProcessingFee"
        android:fontFamily="@font/source_sans_pro_semi_bold"
        app:layout_constraintBottom_toBottomOf="@+id/tvNetAmount"
        app:layout_constraintStart_toEndOf="@+id/tvNetAmount"
        app:layout_constraintTop_toTopOf="@+id/tvNetAmount" />
</androidx.constraintlayout.widget.ConstraintLayout>